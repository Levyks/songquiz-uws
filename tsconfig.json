{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "baseUrl": "./",
      "noImplicitThis": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true,
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "exclude": [
      "node_modules/*",
      "dist/*"
    ]
  }